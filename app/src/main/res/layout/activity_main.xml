<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/ac_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
			<ViewFlipper
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:inAnimation="@anim/fade_in"
				android:outAnimation="@anim/fade_out"
				android:flipInterval="3000"
				android:layout_centerInParent="true"
				android:autoStart="true">
				<com.iqooz5.view.z5TextViewColor
					android:textColor="#FF000000"
					android:textSize="30dp"
					android:gravity="center"
					android:background="@drawable/button4_background"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/iqooz5tool" />
				<com.iqooz5.view.z5TextViewColor
					android:textColor="#FF000000"
					android:textSize="30dp"
					android:gravity="center"
					android:background="@drawable/button4_background"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/developer_ying" />
				<com.iqooz5.view.z5TextViewColor
					android:textColor="#FF000000"
					android:textSize="30dp"
					android:gravity="center"
					android:background="@drawable/button4_background"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:onClick="developer_ying_show"
					android:text="@string/developer_ying_show" />
			</ViewFlipper>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <View
                android:background="#FF66CCFF"
                android:layout_width="match_parent"
                android:layout_height="3dp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />
            <TextClock
                android:textSize="30dp"
                android:textColor="#FF00FFFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:format12Hour="yyyy:MM:dd:HH:mm:ss"
                android:format24Hour="yyyy:MM:dd:HH:mm:ss" />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <View
            android:background="#FF66CCFF"
            android:layout_width="match_parent"
            android:layout_height="3dp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.iqooz5.view.z5Button
                    android:textColor="#FF000000"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/button4_background"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/z5fuelsummary"
                    android:id="@+id/z5fuelsummary"
					android:onClick="z5fuelsummary"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp" />
				<com.iqooz5.view.z5Button
                    android:textColor="#FF000000"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/button4_background"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/z5engineermode"
                    android:id="@+id/z5engineermode"
					android:onClick="z5engineermode"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp" />
				<com.iqooz5.view.z5Button
                    android:textColor="#FF000000"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/button4_background"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/z5phonesetsms"
                    android:id="@+id/z5phonesetsms"
					android:onClick="z5phonesetsms"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp" />
				<com.iqooz5.view.z5Button
                    android:textColor="#FF000000"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/button4_background"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/z5acgo"
                    android:id="@+id/z5acgo"
					android:onClick="z5acgo"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp" />
				<com.iqooz5.view.z5Button
                    android:textColor="#FF000000"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/button4_background"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/developer_ying_show"
                    android:id="@+id/developer_ying_show"
					android:onClick="developer_ying_show"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp" />
                <com.iqooz5.view.z5Button
                    android:textColor="#FF000000"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/button4_background"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp"
                    android:text="@string/z5exit"
                    android:id="@+id/z5exit"
					android:onClick="z5exit"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp" />
            </LinearLayout>
        </ScrollView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <View
            android:background="#FF66CCFF"
            android:layout_width="match_parent"
            android:layout_height="3dp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <ScrollView
            android:background="#2BFFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.iqooz5.view.z5LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.iqooz5.view.z5TextViewColor
                    android:textSize="20dp"
                    android:textColor="#FF00FFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tips: 温馨提示\nz5的满血充电只有\n电源信息1.2和1.6版本有效" />

            </com.iqooz5.view.z5LinearLayout>
        </ScrollView>
		<Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <View
            android:background="#FF66CCFF"
            android:layout_width="match_parent"
            android:layout_height="3dp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />
		<ScrollView
            android:background="#2BFFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
			<com.iqooz5.view.z5LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<!-- 标题 -->
				<com.iqooz5.view.z5TextViewColor
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="充电功率监测"
					android:textSize="22sp"
					android:textColor="@android:color/black"
					android:layout_marginBottom="16dp"
					android:textStyle="bold"/>

				<!-- 功率信息显示区 -->
				<com.iqooz5.view.z5TextView
					android:id="@+id/powerTextView"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="正在初始化..."
					android:textSize="18sp"
					android:textColor="@android:color/darker_gray"
					android:lineSpacingExtra="12dp"/>

				<!-- 状态提示 -->
				<com.iqooz5.view.z5TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="12dp"
					android:text="数据每1秒更新一次"
					android:textSize="14sp"
					android:textColor="@android:color/darker_gray"/>

				<!-- 设备兼容性提示 -->
				<com.iqooz5.view.z5TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					android:text="*部分设备可能因系统限制无法获取完整数据"
					android:textSize="12sp"
					android:textColor="@android:color/darker_gray"/>

				<!-- 开发者 -->
				<com.iqooz5.view.z5TextView
					android:textSize="12sp"
					android:textColor="@android:color/darker_gray"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					android:text="本应用由酷安@ying5544开发" />
			</com.iqooz5.view.z5LinearLayout>
		</ScrollView>
    </LinearLayout>
</LinearLayout>

